{
  "include": ["src"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "removeComments": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "dist"
  },
  "lib": ["es2015"]
}
